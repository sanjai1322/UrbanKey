generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Property {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Int
  address     String
  city        String
  state       String
  zip         String
  lat         Float
  lng         Float
  image       String
  images      String   // Stored as JSON string
  bedrooms    Int
  bathrooms   Int
  sqft        Int
  type        String   // Apartment, House, Condo, Loft
  listingType String   // Sale, Rent
  amenities   String   // Stored as JSON string
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
